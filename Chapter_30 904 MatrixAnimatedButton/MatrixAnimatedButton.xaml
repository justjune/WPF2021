<Canvas 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Canvas.Resources>
        <PathGeometry x:Key="path" Figures="M 96 192 C 288 0, 384 384, 576 192 S 662 192 576 576 S 384 576 96 192" />
    </Canvas.Resources>
    <Path Stroke="Black" Data="{StaticResource  path}" />
    <!--кнопка с заданием положения через транспонированную матрицу-->
    <Button>
        Button
        <Button.RenderTransform>
            <MatrixTransform x:Name="xform" />
        </Button.RenderTransform>
    </Button>
    <!--секция Triggers включающая элемент MatrixAnimationUsingPath отвечающий за анимацию объекта Matrix-->
    <Canvas.Triggers>
        <EventTrigger RoutedEvent="Canvas.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever">
                    <MatrixAnimationUsingPath Storyboard.TargetName="xform" Storyboard.TargetProperty="Matrix" Duration="0:0:10" PathGeometry="{StaticResource path}" DoesRotateWithTangent="True" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Canvas.Triggers>
</Canvas>
